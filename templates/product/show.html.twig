{% extends 'base.html.twig' %}

{% block title %}Product details{% endblock %}

{% block body %}

    <section class="page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-img">
                        <figure>
                            <img class="product-image" src="/images/products/{{ product.image }}" alt="product image">
                        </figure>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product-content">
                        <h2>{{ product.name }}</h2>
                        <div class="pc-meta">
                            <h5>â‚¬{{ product.formattedPrice }}</h5>
                        </div>
                        <p>{{ product.description }}.</p>
                        <ul class="tags">
                            <li><span>Category :</span> {{ product.category.name }}</li>
                        </ul>
                        <a href="{{ path('cart.add',{id: product.id}) }}" class="primary-btn pc-btn">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    <style>
        .product-image {
            width: 100%;
            height: 80vh;
            object-fit: contain;
        }
    </style>
{% endblock %}
