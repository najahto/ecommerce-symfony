{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <!-- Hero Slider -->
    <section class="hero-slider">
        <div class="hero-items owl-carousel">
            <div class="single-slider-item set-bg" data-setbg="{{ asset('assets/img/slider-1.jpg') }}">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>2021</h1>
                            <h2>Lookbook.</h2>
                            <a href="#" class="primary-btn">See More</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="single-slider-item set-bg" data-setbg="{{ asset('assets/img/slider-2.jpg') }}">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>2021</h1>
                            <h2>Lookbook.</h2>
                            <a href="#" class="primary-btn">See More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Slider End -->

    <!-- Latest Products -->
    <section class="latest-products spad">
        <div class="container">
            <div class="product-filter">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="section-title">
                            <h2>Latest Products</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" id="product-list">
                {% for product in latestProducts %}
                    <div class="col-lg-3 col-sm-6 mix all ">
                        <div class="single-product-item">
                            <figure>
                                <a href="{{ path('product.show', {id: product.id, slug: product.slug } ) }}">
                                    <img class="product-image" src="/images/products/{{ product.image }}" alt="product image"></a>
                            </figure>
                            <div class="product-text">
                                <h6>
                                    <a href="{{ path('product.show', {id: product.id, slug: product.slug } ) }}">{{ product.name }}</a>
                                </h6>
                                <p>â‚¬{{ product.formattedPrice }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Latest Product End -->
{% endblock %}
