{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <section class="page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-breadcrumb">
                        <h2>Register<span>.</span></h2>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="custom-form  mt-5">
                                {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-lg-6">
                                        {{ form_row(form.firstname) }}
                                    </div>
                                    <div class="col-lg-6">
                                        {{ form_row(form.lastname) }}
                                    </div>
                                    <div class="col-lg-12">
                                        {{ form_row(form.email) }}
                                        {{ form_row(form.password) }}
                                    </div>
                                    <div class="col-lg-12 text-right">
                                        <button type="submit">{{ button | default('Register') }}</button>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
