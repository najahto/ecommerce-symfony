{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <section class="page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-breadcrumb">
                        <h2>Change my password<span>.</span></h2>
                        <a href="{{ path("account") }}">back to account</a>
                    </div>
                    <div class="mt-4">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-12">
                    <div class="custom-form">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-lg-6">{{ form_row(form.firstname) }}</div>
                            <div class="col-lg-6">{{ form_row(form.lastname) }}</div>
                            <div class="col-lg-12">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-lg-12">
                                {{ form_row(form.old_password) }}
                            </div>
                            <div class="col-lg-12">{{ form_row(form.new_password) }}</div>
                            <div class="col-lg-12 text-right">
                                {{ form_rest(form) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
